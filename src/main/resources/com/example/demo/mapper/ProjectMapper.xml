<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.ProjectMapper">

    <select id="getDataInfoCount"
            parameterType="String"
            resultType="Integer">
        SELECT
          COUNT(dataId)
        FROM
          qtProject.[DataInfo]
        WHERE
          userId = #{userId}
    </select>

    <select id="getData"
            parameterType="java.util.Map"
            resultType="Integer">
        SELECT
            point
        FROM
            qtProject.[Data]
        WHERE
            dataId = #{dataId}
    </select>

    <insert id="insertData"
            parameterType="java.util.Map">
        INSERT
        INTO
            qtProject.[Data]
            (dataId, point) VALUES (#{dataId},#{point})
    </insert>

    <select id="getDataId"
            resultType="Integer">
        SELECT
            ISNULL(max(dataId),0)
        FROM
            qtProject.[Data]
    </select>

    <select id="getMarkings"
            parameterType="java.util.Map"
            resultType="Integer">
        SELECT
            point
        FROM
            qtProject.[Markings]
        WHERE
            dataId = #{dataId}
        AND
            userId = #{userId}
    </select>


    <insert id="insertMarkings"
            parameterType="java.util.Map">
        INSERT
            INTO
              qtProject.[Markings] (dataId,point,pointId,userId)
            VALUES
              (#{dataId},#{point},#{pointId},#{userId})
    </insert>


    <select id="getMarkingsInfo"
            resultType="java.util.Map">
        SELECT
               *
        FROM
             qtProject.[MarkingsInfo]
    </select>

    <delete id="deleteMarkings"
            parameterType="java.util.Map">
        DELETE
        FROM
            qtProject.[Markings]
        WHERE
            dataId = #{dataId}
        AND
            userId = #{userId}
        AND
            pointId = #{pointId}
    </delete>

    <insert id="confirmData"
            parameterType="java.util.Map">
        INSERT
            INTO
              qtProject.[dataInfo] (dataId,status,userId)
            VALUES
              (#{dataId},#{status},#{userId})
    </insert>

    <select id="checkIsValid"  parameterType="java.util.Map" resultType="int">
        SELECT
            ISNULL(max(dataId),0) as count
        FROM
            qtProject.[DataInfo]
        where
            dataId = #{dataId}
        AND
            userId = #{userId}
    </select>

    <select id="getPath" resultType="com.example.demo.entities.Waveform_info" >
        SELECT
            TOP 1 *
        FROM
            qtProject.[waveform_info] as wi
        LEFT JOIN
            qtProject.[datainfo] as di
        ON wi.id = di.dataId
    </select>


</mapper>